<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Login Window">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Welcom + Icons +Sign Up-->
        <Grid Grid.Column="0" Padding="30">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="RoyalBlue" Offset="0"/>
                    <GradientStop Color="MediumSlateBlue" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- MAIN CONTENT (centered) -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Welcome"
                   Foreground="White"
                   FontSize="48"
                   FontWeight="Bold"
                   Margin="50"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="Facebook" CornerRadius="90" Width="50" Height="50" Background="white" Margin="10,0,0,10">
                        <ImageIcon Source="https://cdn-icons-png.freepik.com/512/3128/3128304.png"/>
                    </Button>
                    <Button Name="X" CornerRadius="90" Width="50" Height="50" Background="white" Margin="10,0,0,10">
                        <ImageIcon Source="https://cdn-icons-png.freepik.com/512/2111/2111688.png"/>
                    </Button>
                    <Button Name="Google" CornerRadius="90" Width="50" Height="50" Background="white" Margin="10,0,0,10">
                        <ImageIcon Source="https://cdn-icons-png.freepik.com/512/2991/2991148.png"/>
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- BOTTOM PANEL -->
            <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,24">
                <TextBlock Text="Don't have an account?" Foreground="White" FontFamily="Arial" FontSize="22"/>
                <HyperlinkButton HorizontalAlignment="Center">
                    <TextBlock Text="Sign Up"
                       TextDecorations="Underline"
                       Foreground="AliceBlue"/>
                </HyperlinkButton>
            </StackPanel>

        </Grid>
        <StackPanel Grid.Column="1" Padding="25">
            <StackPanel HorizontalAlignment="Center">
                <FontIcon Glyph="&#xE7BF;" FontSize="50"/>
                <TextBlock Text="Mahali MS" FontSize="24"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Stretch" Margin="0,30,30,0">
                <TextBox PlaceholderText="Username" Margin="0,10,10,0"/>
                <TextBox PlaceholderText="Password" Margin="0,10,10,0"/>
                <CheckBox Content="Remember Me !" Margin="0,5,5,0"/>
            </StackPanel>
            <Button  FontSize="18" Background="RoyalBlue" Foreground="White" 
                     Content="Login" HorizontalAlignment="Stretch"/>
            <HyperlinkButton Content="Forgot Password" NavigateUri="https://www.microsoft.com"/>

        </StackPanel>
    </Grid>
    
</Window>
